<h1>Detalle de caja</h1>
<p id="notice"><%= notice %></p>
<hr/>

<h4>Turno: <%= @caja.turno %></h4>
<p><strong>Usuario: </strong><%= @caja.usuario %></p>
<p><strong>Fecha:</strong> <%=@caja.created_at%></p>
</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="2">Billetes</th>
      <th colspan="2">Monedas</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>200€</th>
      <td><%= @caja.doscientos %></td>
      <th>2€</th>
      <td><%= @caja.dos%></td>
    </tr>
     <tr>
      <th>100€</th>
      <td><%= @caja.cien %></td>
      <th>1€</th>
      <td><%= @caja.uno%></td>
    </tr>
     <tr>
      <th>50€</th>
      <td><%= @caja.cincuenta %></td>
      <th>50 cent.</th>
      <td><%= @caja.medio%></td>
    </tr>
     <tr>
      <th>20€</th>
      <td><%= @caja.veinte %></td>
      <th>20 cent.</th>
      <td><%= @caja.veintecentimos%></td>
    </tr>
    <tr>
      <th>10€</th>
      <td><%= @caja.diez %></td>
      <th>10 cent.</th>
      <td><%= @caja.diezcentimos%></td>
    </tr>
     <tr>
      <th>5€</th>
      <td><%= @caja.cinco %></td>
      <th>5 cent.</th>
      <td><%= @caja.cincocentimos%></td>
    </tr>
  </tbody>
</table>

<table class='table table-striped'>
<tr>
   <td><strong>Total calculo: </strong> <%= @caja.totalCalculo %> €</td>
  <td></td>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
 
</tr>
<tr>
  <td><strong>Total contado: </strong> <%= @caja.totalContado %> €</td>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
  
</tr>
<tr>
 <td><strong>Desvío: </strong> <%= @caja.desvio %> €</td>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
  <td><%= link_to 'Editar', edit_caja_path(@caja),:class=>'btn' %> |
<%= link_to 'Volver ', cajas_path ,:class=>'btn'%></td>
   
</tr>
